

@{
    ViewData["Title"] = "Index";
}
<a class="btn btn-primary" asp-controllor="Product" asp-action="Save">Save Product</a>
@model List<ProductWithCategoryDto>
<Table class="table table-secondary"> 
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Stok</td>
            <td>Price</td>
            <td>Category</td>
            <td>Created Date</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id </td>
                    <td>@item.Name</td>
                    <td>@item.Stock</td>
                    <td>@item.Price </td>
                    <td>@item.Category.Name</td>
                    <td>@item.CreatedDate</td>
                    <td>
                    <a class="btn btn-primary" asp-controller="Products" asp-action="Update" asp-route-id="@item.Id"> Update</a> 
                    <a class="btn btn-danger" asp-controller="Products" asp-action="Remove" asp-route-id="@item.Id"> Delete</a>  
                    </td>
                    </tr>
            }
        }
       
    </tbody>
</Table>
